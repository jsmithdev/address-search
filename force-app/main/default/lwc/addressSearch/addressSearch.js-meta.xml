<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>48.0</apiVersion>
    <isExposed>false</isExposed>

    <masterLabel>Address Search</masterLabel>

    <description>Search for address</description>

    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__RecordPage, lightning__AppPage, lightningCommunity__Default">
            <property 
                name="label" 
                type="String"
                label="Label" 
                description="Label for use above search bar"
                default="Default Text"
            ></property>
            <property 
                name="placeholder" 
                type="String"
                label="Placeholder" 
                description="Placeholder text for use in empty search bar"
                default="Enter address..."
            ></property>
        </targetConfig>
    </targetConfigs>
    
</LightningComponentBundle>